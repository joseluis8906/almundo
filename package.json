{
  "name": "app",
  "version": "1.0.0",
  "description": "almundo api service",
  "main": "index.ts",
  "scripts": {
    "pre:dev": "npm run build && node --inspect=9229 dist/index.js",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "build": "rm -rf dist || true && ./node_modules/.bin/tsc && npm run copy:resources",
    "serve": "node dist/index.js",
    "test:unit": "./node_modules/.bin/jest --config=jest.config.json",
    "test:factory": "./node_modules/.bin/tsc test/factory/steps/*.steps.ts && ./node_modules/.bin/cucumber-js --format=json:./main/contrib/assets/reports/cucumber_report.json test/factory/ && node cucumber-report.js",
    "copy:resources": "cp -R main/contrib/assets/ dist/contrib/"
  },
  "_moduleAliases": {
    "@root": ".",
    "@app": "dist",
    "@test": "test"
  },
  "author": "Jose Luis CÃ¡ceres Escudero",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "module-alias": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.5",
    "@types/cucumber": "^4.0.5",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.12",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^12.0.0",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "cucumber-html-reporter": "^5.0.0",
    "jest": "^24.7.1",
    "jest-html-reporters": "^1.1.4",
    "nodemon": "^1.19.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
